<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Clients</h1>

  <%= link_to "New client", new_client_path,  class: "btn btn-sm btn-secondary btn-outline-light"%>

  <div id="clients ">
    <table class="table table-bordered text-start mt-3 table-hover">
      <thead>
        <tr class="text-center">
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="2">Manage Client</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
        <div id="<%= dom_id client %>">
          <%#= render client %>
          <tr>
            <th scope="row"><%= client.id %></th>
            <td><%= client.name %></td>
            <td><%= client.age %></td>
            <td><%= client.movies.last&.name %></td>
            <td class="text-center"><%= link_to "Show this client", client, class: "btn btn-sm btn-secondary btn-outline-light" %></td>
            <td class="text-center"><%= link_to "Edit this client", edit_client_path(client), class: "btn btn-sm btn-secondary btn-outline-light" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>